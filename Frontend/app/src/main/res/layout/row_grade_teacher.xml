<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/row_gradeTeacherStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Student Name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/row_gradeTeacherScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/row_gradeTeacherTotal"
        android:text="100"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/row_gradeTeacherTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@id/row_gradeEdit"
        android:text="100"
        android:textSize="20sp" />

    <Button
        android:id="@+id/row_gradeEdit"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="add"
        app:icon="@android:drawable/ic_menu_edit"
        app:iconTint="@color/black"
        app:iconTintMode="src_atop" />

</RelativeLayout>